<form>
    <div class="columns">
        <div class="column is-3"></div>
        <div class="column is-6">
            <h1 class="has-text-weight-medium is-size-5">Create New Post</h1>
            <div>
                <h2>Post Title</h2>
                <input class="input" type="text" id="post-title" name="post-title" />
                <h4>Post</h4>
                <textarea name="post-contents"></textarea>
            </div>
            <button type="submit" class="btn new-post button is-info">Create Post</button>
        </div>
        <div class="column is-3"></div>
    </div>

    <div class="columns">
        <div class="column is-3"></div>
        <div class="column is-6">
            {{#if posts.length}}
            <section>
             <h2 class="has-text-weight-medium is-size-5">Your Posts</h2>
                <ol>
                    {{#each posts as |post|}}
                    <li>
                        {{> post-data post}}
                        <a  href="/dashboard/edit/{{post.id}}" class="button is-info"> Edit Post</a>
                    </li>
                    {{/each}}
                    </ol>
                    </section>
            {{/if}}
        </div>
        <div class="column is-3"></div>
    </div>
</form>

<script src="/javascript/add-post.js"></script>