<form>
    <div class="columns">
        <div class="column">
             <form >
            <h1>Create New Post</h1>
                <div>
                    <h2>Post Title</h2>
                    <input type="text" id="post-title" name="post-title" />
                    <h4>Post</h4>
                    <textarea name="post-contents"></textarea>
                </div>
                <button type="submit" class="btn new-post">Create Post</button>
            </form>
        </div>

<div class="columns">
    <div class="column">
        {{#if posts.length}}
        <section>
            <h2>Your Posts</h2>
            <ol>
                {{#each posts as |post|}}
                <li>
                    {{> post-data post}}
                    <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
                </li>
                {{/each}}
            </ol>
        </section>
        {{/if}}

    </div>
</div>
</div>
</div>
</form>

<script src="/javascript/add-post.js"></script>